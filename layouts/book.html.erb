<div id="<%= "book-#{item[:isbn]}" %>">
<h2 class="book-title">
<%= @item[:title] %>
<% if @item[:favorite] %>
&nbsp;<span class="favorite-icon" aria-label="Coup de cÅ“ur" title="Coup de cÅ“ur"><%= heart_svg %></span>
<% end %>
</h2>
<h4><%= @item[:author] %></h4>

<% unless item[:rating].nil? || item[:rating].zero? %>
<div aria-label="<%= @item[:rating] %>" class="rating-bar" data-rating="<%= @item[:rating] %>" title="<%= @item[:rating] %>">
<% 10.times do |i| %>
<%= star_svg(filled: i < @item[:rating], size: 16) %>
<% end %>
</div>
<% end %>
<% if item[:ongoing] %>
<p class="book-details">ğŸ“– En cours de lectureâ€¦</p>
<% end %>
<% unless item[:priority].nil? %>
<p class="book-details">Dans les envies de lecture pour plus tardâ€¦</p>
<% end %>
<% unless item[:read_date].nil? %>
<p class="read-date book-details">Lu en <%= get_pretty_date(item) %>.</p>
<% end %>

<%
unless @items["/cover/#{@item[:isbn]}.*"].nil?
  cover = @items["/cover/#{@item[:isbn]}.*"]
%>
<img src="<%= cover.path %>" width="<%= cover["width_default"] %>" height="<%= cover["height_default"] %>"  alt="Couverture du livre <%= @item[:title] %> de <%= @item[:author] %>" class="book-cover">
<% end %>

<%= yield  %>

<div style="clear: left; margin-bottom: 1em;"></div>

<% unless @item[:tags].nil? || @item[:tags].empty? %>
<ul class="book-tags">
  <li><span title="Ã‰tiquettes">ğŸ·ï¸</span></li>
  <% @item[:tags].each do |tag| %>
  <li class="tag"><%= link_to_tag(tag) %></li>
  <% end %>
</ul>
<% end %>

<%
linked_books = @item.fetch(:linked_books, []).filter_map do |isbn|
  book_item = find_book_by_isbn(isbn)
  warn "Warning: Linked book with ISBN #{isbn} not found." unless book_item
  book_item
end.sort_by { |book| sortable_label(book[:title]) }

unless linked_books.empty?
%>
<h3>Ã€ lire aussi</h3>
<ul class="linked-books">
<% linked_books.each do |book| %>
  <li><a href="<%= book.path %>"><%= linked_book_title(@item, linked_book: book) %></a></li>
<% end %>
</ul>
<% end %>

<% unless @item[:social].nil? %>
<h3>Retrouver ce livre sur</h3>
<ul class="book-social-links">
  <% @item[:social].sort.each do |platform, social_identifier| %>
    <%
    social = @config[:social][:badges][platform]
    slug = @item.identifier.without_exts.delete_prefix('/book/') + '/'
    book_social_url = "#{social[:base_url]}#{social[:book_page_path_prefix]}#{slug}#{social_identifier}"
    icon_item = @items[social[:icon_identifier]]
    %>
      <li>
        <a
          class="book-social-link book-social-link-<%= platform.to_s %>"
          href="<%= book_social_url %>"
          target="_blank"
          rel="noopener"
          style="--social-tint-color: <%= hex_color_to_rgba(social[:tint]) %>"
        >
          <% if icon_item[:extension] == 'svg' %>
          <%= icon_svg(icon_item) %>
          <% else %>
          <img src="<%= "#{icon_item.path}" %>" width="<%= @config[:social][:badge_size] %>" height="<%= @config[:social][:badge_size] %>" alt="">
          <% end %>
          <%= social[:label] %>
        </a>
      </li>
  <% end %>
</ul>
<% end %>

</div>