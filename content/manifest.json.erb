layout: none
---
<%
require 'htmlentities'
%>{
  "name": "<%= "#{HTMLEntities.new.decode(@config[:site][:title])} â€” #{@config[:site][:description]}" %>",
  "short_name": "<%= HTMLEntities.new.decode(@config[:site][:title]) %>",
  "icons": [
    {
      "src": "<%= @items['/static/favicon.*'].path(rep: :favicon192) %>",
      "sizes": "192x192",
      "type": "image/png",
      "density": 4.0,
      "purpose": "any"
    },
    {
      "src": "<%= @items['/static/favicon.*'].path(rep: :favicon512) %>",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "<%= @items['/static/favicon192-maskable.*'].path %>",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "<%= @items['/static/favicon512-maskable.*'].path %>",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "background_color": "#eeeeee",
  "theme_color": "#c51104",
  "start_url": "/?utm_source=pwa",
  "display": "standalone",
  "orientation": "portrait",
  "description": "<%= @config[:site][:description] %>",
  "screenshots" : <%= @items.select { |i| i.identifier =~ '/static/pwa-screenshot-*' }.map { |item| pwa_screenshot_to_json(item) }.to_json %>
}
